NAME="Tau"
VERSION=0.1.0
DESCRIPTION="OS agnostic package manager"
TYPE=SOURCE
# Comma separated dependencies, starting with '$' means optional, any objects between "[]" will be acceptable dependencies
DEPS= glibc, gcc, xz

build(linux) {
    cd $SRC_DIR
    mkdir cmake-build-debug
    cd cmake-build-debug
    cmake ../
    cd ../
    cmake --build ./cmake-build-debug --target tau -j $JOBS
}